if [ -f "$__object/parameter/name" ]; then
   name="$(cat "$__object/parameter/name")"
else
   name="$__object_id"
fi

action="restart"

if [ -f "$__object/parameter/$action-command" ]; then
   cat "$__object/parameter/$action-command"
   exit 0
fi

if command -v systemctl >/dev/null; then
   printf 'systemctl %s %s\n' "$action" "$name"
elif command -v service >/dev/null; then
   printf 'service %s %s\n' "$name" "$action"
else
   echo "Don't know how to $action a service on your operating system ($("$__explorer/os"))" >&2
   echo "Please contribute an implementation for it if you can." >&2
   exit 1
fi
